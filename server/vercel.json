{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/auth/signin",
      "destination": "/controllers/auth.js"
    },
    {
      "source": "/auth/signup",
      "destination": "/controllers/auth.js"
    },
    {
      "source": "/auth/verifyOtp",
      "destination": "/controllers/auth.js"
    },
    {
      "source": "/api/plans",
      "destination": "/controllers/plans.js"
    },
    {
      "source": "/profile/upload/:userId",
      "destination": "/controllers/profile.js"
    },
    {
      "source": "/profile/:userId/image",
      "destination": "/controllers/profile.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ],
  "trailingSlash": true
}